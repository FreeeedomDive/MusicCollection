FROM mcr.microsoft.com/dotnet/sdk:7.0 AS build
WORKDIR /certificate
RUN dotnet dev-certs https --clean
RUN dotnet dev-certs https -ep ./https/certificate.pfx -p aspnet
RUN dotnet dev-certs https --trust
WORKDIR /src
COPY ["MusicCollection.MusicService/MusicCollection.MusicService.csproj", "MusicCollection.MusicService/"]
COPY ["MusicCollection.Api.Dto/MusicCollection.Api.Dto.csproj", "MusicCollection.Api.Dto/"]
COPY ["TagsService/TagsService.csproj", "TagsService/"]
COPY ["ApiUtils/ApiUtils.csproj", "ApiUtils/"]
RUN dotnet restore "MusicCollection.MusicService/MusicCollection.MusicService.csproj"
COPY . .

FROM build AS publish
WORKDIR "/src/MusicCollection.MusicService"
RUN dotnet publish "MusicCollection.MusicService.csproj" -c Release -o /app/publish

FROM mcr.microsoft.com/dotnet/aspnet:7.0 AS final
WORKDIR /app/publish
COPY --from=build /certificate /certificate
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "MusicCollection.MusicService.dll"]
